MODULE main
VAR
    a : boolean ;
    b : boolean ;
ASSIGN
    init(a) := TRUE;
    init(b) := FALSE;
    next(a) := case
        a & !b : {TRUE, FALSE};
        TRUE: a;
    esac;

    next(b) := case
        a & !b & next(a) : TRUE;
        a & !b & !next(a) : {TRUE, FALSE};
        a & b : FALSE;
        TRUE : TRUE;
    esac;

LTLSPEC G a
LTLSPEC a U b
LTLSPEC a U X(a & !b)
LTLSPEC X !b & G(!a | !b)
LTLSPEC X (a & b) & F(!a & !b)
SPEC EF EG a
SPEC EF EG b
LTLSPEC F((G a) | (G b))
    


